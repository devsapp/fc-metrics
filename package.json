{
  "name": "fc-metrics",
  "version": "0.1.6",
  "main": "./dist/index.js",
  "autoInstall": false,
  "dependencies": {
    "@alicloud/fc2": "^2.2.2",
    "@alicloud/log": "^1.1.0",
    "aliyun-sdk": "1.12.3",
    "@alicloud/pop-core": "^1.7.10",
    "@serverless-devs/core": "0.0.*",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "lodash": "^4.17.20",
    "promise-retry": "^2.0.1",
    "ts-node": "^9.1.1"
  },
  "devDependencies": {
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/eslint": "^7.2.6",
    "@types/jest": "^26.0.10",
    "@types/lodash": "^4.14.168",
    "@types/node": "14",
    "f2elint": "^0.4.4",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^26.4.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.14",
    "typescript": "^3.9.7",
    "@vercel/ncc": "^0.24.0"
  },
  "scripts": {
    "dev": "npx tsc -w -p tsconfig.json",
    "test": "jest",
    "test:cov": "jest --coverage",
    "lint": "f2elint scan",
    "fix": "f2elint fix",
    "typecheck": "npx tsc -p tsconfig.json --noEmit",
    "prebuild": "npm i rimraf --no-save && rimraf package-lock.json && rimraf dist && rimraf node_modules && npm i",
    "build": "npm run fix && npm run lint && ncc build src/index.ts -m -e @serverless-devs/core -o dist",
    "postbuild": "./src/script/build.sh"
  },
  "husky": {
    "hooks": {
      "commit-msg": "f2elint exec commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "f2elint exec lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts}": "f2elint exec eslint"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
